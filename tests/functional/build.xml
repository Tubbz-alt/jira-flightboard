<?xml version="1.0" encoding="UTF-8"?>

<project name="IncidentMgr" default="build">
    <target name="install-npm-dependencies" description="Install npm dependencies">
        <exec executable="npm" failonerror="true">
            <arg value="install"/>
        </exec>
    </target>

    <target name="build" description="Run UI tests">
        <exec executable="./node_modules/mocha/bin/mocha" failonerror="true">
            <arg value="--timeout"/>
            <arg value="100000"/>
            <arg value="./cases/*.js"/>
        </exec>
    </target>
</project>
