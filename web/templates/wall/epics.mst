<table cellspacing="0" cellpadding="0">
    <colgroup>
        <col width="4%">
        <col width="9%">
        <col width=55%">
        <col width="11%">
        <col width="23%">
    </colgroup>
    <tr class="header">
        <td></td>
        <td>Sched</td>
        <td>City</td>
        <td>Flight</td>
        <td>Status</td>
    </tr>
{{ #issues }}
    <tr>
        <td class="image"><img src="./web/img/{{ icon }}"/></td>
        <td>{{ sched }}</td>
        <td><div class="summary">{{ summary }}</div></td>
        <td>{{ key }}</td>
        {{ #since }}
        <td><span class="notime-{{ status }}">{{ statusMessage }}</span><span class="status-{{ status }}">{{ since }}</span></td>
        {{ /since }}
        {{ ^since }}
        <td class="status-{{ status }}">{{ statusMessage }}</td>
        {{ /since }}
    </tr>
{{ /issues }}
</table>
